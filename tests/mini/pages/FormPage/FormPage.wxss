#view1 {
  display: flex;
  justify-content: center;
  align-items: flex-start;
  flex-wrap: wrap;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
}

#user_name {
  width: 100%;
}

#user_password {
  width: 100%;
}

.formTitle {
  color: black;
  font: bold 50rpx "times new roman";
}

.formContainer {
  width: 80%;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40rpx;
  margin-bottom: 50rpx;
}

.formItem {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid gray;
  box-sizing: border-box;
}

.formButton {
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-bottom: 40rpx;
  color: red;
  background: green url("" no-repeat center / cover);
}